<div class="card">

    <button type="button" id="addnewOffer" class="btn btn-info btn-small" data-toggle="modal" data-target="#offerModal">Add New Offer</button>


    <div class="table-responsive">
        <table class="table table-bordered">
            <% for(var i=0; i < data.length; i++) { %>

            <h2><%= data[i].catTitle %></h2>
            <table class="table table-bordered">
            <thead>
            <tr>
                <th>#</th>
                <th>title</th>
                <th>Description</th>
                <th>Catogery</th>
                <th>Created At</th>
                <th>Action</th>
            </tr>
            </thead>
            <tbody>

            <% for(var j=0; j < data[i].Offers.length; j++) { %>
            <tr>
                <td><%= j+1 %></td>
                 <td> <a href="offers/<%= data[i].Offers[j].offer_id %>" ><%= data[i].Offers[j].title %></a></td>
                <td><%= data[i].Offers[j].description %></td>
                <td><%= data[i].Offers[j].catTitle %></td>

                <td><%= moment(data[i].Offers[j].createdAt).format('LLL')  %></td>
                <th>
                    <span data-id="<%= data[i].Offers[j].offer_id %>" data-title="<%= data[i].Offers[j].title %>" data-description="<%= data[i].Offers[j].description %>" class="btn editOffer btn-small btn-primary glyphicon glyphicon-edit" >  </span> ||
                    <span data-toggle="modal" data-target="#deleteOffer" data-id="<%= data[i].Offers[j].id %>" class="btn deleteOfferBtn btn-small btn-danger glyphicon glyphicon-remove" >  </span>
                </th>
            </tr>
            <% } %>

            </tbody>

            </table>
            <% } %>

        </table>
    </div>


</div>







<!-- Modal -->
<div class="modal fade" id="offerModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Offer</h4>
            </div>
            <div class="modal-body">
                <form action="#" method="post" id="addUpdateOfferForm">
                    <div class="form-group">
                        <label for="email">Offer Title:</label>
                        <input type="text" value="" class="form-control" id="title" name="title" placeholder="EnterOffer title here">
                        <input type="hidden" value="0" id="Offerid" name="id">
                    </div>

                    <div class="form-group" id="catTypeDiv">
                        <label for="email">Catogery Type:</label>
                        <select class="form-control" name="categoryId" id="categoryId">
                            <option value="-1">Please Select</option>

                        </select>

                    </div>

                    <div class="form-group">
                        <label for="email">Descreption:</label>
                        <textarea class="form-control" id="description" name="description"></textarea>
                    </div>

                    <button type="button" id="addorUpdateOffer" class="btn btn-info">Submit</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                </form>
            </div>

        </div>

    </div>
</div>


<!-- Delete Modal -->
<div class="modal fade" id="deleteOffer" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Delete Offer</h4>
            </div>
            <div class="modal-body">
                <label>Are sure you want to delete.</label>
            </div>
            <div class="modal-footer">
                <button type="button" id="" class="btn confirmDeleteOffer btn-danger">Delete</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>

        </div>

    </div>
</div>